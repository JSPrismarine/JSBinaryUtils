{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "dependencyDashboard": true,
  "labels": ["dependencies"]
}
