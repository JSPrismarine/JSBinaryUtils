{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "esnext"
        ],
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/BinaryStream.ts",
        "./src/types"
    ],
    "typeRoots": [
        "node_modules/@types",
        "./src/types"
    ]
}
